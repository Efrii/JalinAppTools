<Page x:Class="JalinTools.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="#F5F5F5"
      Title="Beranda">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigasi Atas -->
        <Grid Grid.Row="0" Background="#DB4231" Height="80">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" 
                                              BlurRadius="4" 
                                              Opacity="0.3"
                                              Color="Black"/>
                        </TextBlock.Effect>
                        <Run Text="Jalin" FontWeight="ExtraBold"/><!--
                     --><Run Text="Tools" FontWeight="Light"/>
                    </TextBlock>
                </StackPanel>

                <!-- Info Versi -->
                <TextBlock Grid.Column="2" 
                           Text="v1.2.0" 
                           FontSize="12" 
                           Foreground="White" 
                           Opacity="0.8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- Konten Utama -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                <!-- Bagian Sambutan -->
                <StackPanel Margin="0,20,0,40">
                    <TextBlock Text="Selamat Datang di JalinTools" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#212121"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Kumpulan Tools untuk EFTS" 
                               FontSize="18" 
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Grid Alat -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Kartu Alat EJ Parser -->
                    <materialDesign:Card Grid.Column="0" Grid.Row="0"
                                         Padding="30" 
                                         UniformCornerRadius="12"
                                         materialDesign:ElevationAssist.Elevation="Dp4">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocument" 
                                                     Width="60" 
                                                     Height="60" 
                                                     Foreground="#DB4231"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,20"/>
                            
                            <TextBlock Text="Parser EJ EFTS" 
                                       FontSize="24" 
                                       FontWeight="SemiBold" 
                                       Foreground="#212121"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Parse EJ EFTS format JALIN" 
                                       FontSize="14" 
                                       Foreground="#757575"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,25"/>
                            
                            <Button Content="BUKA" 
                                    Click="OpenEJParser_Click"
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Stretch">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Background" Value="#DB4231"/>
                                        <Setter Property="BorderBrush" Value="#DB4231"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C13929"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Kartu Parser EJ NCR -->
                    <materialDesign:Card Grid.Column="2" Grid.Row="0"
                                         Padding="30" 
                                         UniformCornerRadius="12"
                                         materialDesign:ElevationAssist.Elevation="Dp2"
                                         Opacity="0.7">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocumentOutline" 
                                                     Width="60" 
                                                     Height="60" 
                                                     Foreground="#9E9E9E"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,20"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Parser EJ NCR" 
                                           FontSize="24" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212121"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="#FF9800" CornerRadius="8" Padding="6,2">
                                    <TextBlock Text="SEGERA" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                               </Border>
                            </StackPanel>
                            
                            <TextBlock Text="Parse EJ Native format NCR APTRA" 
                                       FontSize="14" 
                                       Foreground="#757575"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,25"/>
                            
                            <Button Content="DALAM PENGEMBANGAN" 
                                    IsEnabled="False"
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Stretch"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Kartu Parser EJ Hyosung -->
                    <materialDesign:Card Grid.Column="0" Grid.Row="2"
                                         Padding="30" 
                                         UniformCornerRadius="12"
                                         materialDesign:ElevationAssist.Elevation="Dp2"
                                         Opacity="0.7">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocumentOutline" 
                                                     Width="60" 
                                                     Height="60" 
                                                     Foreground="#9E9E9E"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,20"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Parser EJ Hyosung" 
                                           FontSize="24" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212121"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="#FF9800" CornerRadius="8" Padding="6,2">
                                    <TextBlock Text="SEGERA" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Text="Parse EJ Native format Hyosung MoniPlus" 
                                       FontSize="14" 
                                       Foreground="#757575"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,25"/>
                            
                            <Button Content="DALAM PENGEMBANGAN" 
                                    IsEnabled="False"
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Stretch"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Kartu Parser EJ Wincor -->
                    <materialDesign:Card Grid.Column="2" Grid.Row="2"
                                         Padding="30" 
                                         UniformCornerRadius="12"
                                         materialDesign:ElevationAssist.Elevation="Dp2"
                                         Opacity="0.7">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocumentOutline" 
                                                     Width="60" 
                                                     Height="60" 
                                                     Foreground="#9E9E9E"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,20"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <TextBlock Text="Parser EJ Wincor" 
                                           FontSize="24" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212121"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <Border Background="#FF9800" CornerRadius="8" Padding="6,2">
                                    <TextBlock Text="SEGERA" 
                                               FontSize="10" 
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Text="Parse EJ Native format Wincor/Diebold Nixdorf" 
                                       FontSize="14" 
                                       Foreground="#757575"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,0,0,25"/>
                            
                            <Button Content="DALAM PENGEMBANGAN" 
                                    IsEnabled="False"
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Stretch"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!-- Info Footer -->
                <StackPanel Margin="0,60,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="Tools untuk memudahkan analisis data EFTS" 
                               FontSize="12" 
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Â© 2025 Cash Point Channel Solution" 
                               FontSize="11" 
                               Foreground="#BDBDBD"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
