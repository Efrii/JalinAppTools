<Page x:Class="JalinTools.Views.EJParserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewmodels="clr-namespace:JalinTools.ViewModels"
      Background="#F5F5F5"
      Title="Parser EJ">

    <Page.DataContext>
        <viewmodels:MainViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigasi Atas -->
        <Grid Grid.Row="0" Background="#DB4231" Height="80">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tombol Kembali dan Judul -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Click="BackToHome_Click"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="40"
                            Height="40"
                            Margin="0,0,15,0">
                        <materialDesign:PackIcon Kind="ArrowLeft" 
                                                 Width="24" 
                                                 Height="24" 
                                                 Foreground="White"/>
                    </Button>
                    <materialDesign:PackIcon Kind="FileDocument" 
                                             Width="40" 
                                             Height="40" 
                                             Foreground="White" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Parser EJ" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Parser Electronic Journal" 
                                   FontSize="12" 
                                   Foreground="White" 
                                   Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <!-- Versi -->
                <TextBlock Grid.Column="2" 
                           Text="v1.2.0 | Modul Parser EJ" 
                           FontSize="11" 
                           Foreground="White" 
                           Opacity="0.8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- Konten Utama -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <!-- Kartu Input File -->
                <materialDesign:Card Margin="0,0,0,20" 
                                     Padding="25" 
                                     UniformCornerRadius="10"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="Folder" 
                                                     Width="20" 
                                                     Height="20" 
                                                     Foreground="#DB4231"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Input File" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#DB4231"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Pilih file log input..."
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     IsReadOnly="True"
                                     FontSize="13"
                                     Margin="0,0,15,0"/>
                            
                            <Button Grid.Column="1"
                                    Content="TELUSURI"
                                    Command="{Binding BrowseFileCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="40"
                                    Width="120"
                                    FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Kartu Pengaturan -->
                <materialDesign:Card Margin="0,0,0,20" 
                                     Padding="25" 
                                     UniformCornerRadius="10"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="Cog" 
                                                     Width="20" 
                                                     Height="20" 
                                                     Foreground="#DB4231"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Pengaturan" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#DB4231"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- TID -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="TID (Terminal ID):"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,15"
                                       FontSize="13"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding TID, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="contoh: T0800004"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="13"
                                     Margin="0,0,0,15"/>

                            <!-- Tanggal -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Tanggal:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,15"
                                       FontSize="13"/>
                            <DatePicker Grid.Row="1" Grid.Column="1"
                                        SelectedDate="{Binding SelectedDate}"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        materialDesign:HintAssist.Hint="Pilih tanggal transaksi"
                                        FontSize="13"
                                        Margin="0,0,0,15"/>

                            <!-- Participant ID -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Participant ID:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"
                                       FontSize="13"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      SelectedValue="{Binding SelectedParticipantId}"
                                      SelectedValuePath="Content"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Pilih Participant ID"
                                      FontSize="13">
                                <ComboBoxItem Content="200" IsSelected="True"/>
                                <ComboBoxItem Content="008"/>
                                <ComboBoxItem Content="002"/>
                                <ComboBoxItem Content="009"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Kartu Opsi Format -->
                <materialDesign:Card Margin="0,0,0,20" 
                                     Padding="25" 
                                     UniformCornerRadius="10"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                     Width="20" 
                                                     Height="20" 
                                                     Foreground="#DB4231"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Opsi Format" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#DB4231"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <RadioButton Content="Standard (Ekisting)"
                                         IsChecked="{Binding IsStandardFormat}"
                                         Style="{StaticResource MaterialDesignRadioButton}"
                                         FontSize="13"
                                         Margin="0,0,0,10">
                                <RadioButton.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="Ekstrak data transaksi penting ke file CSV untuk analisis" 
                                                   MaxWidth="250" 
                                                   TextWrapping="Wrap"/>
                                    </ToolTip>
                                </RadioButton.ToolTip>
                            </RadioButton>
                            <RadioButton Content="Lengkap (Komprehensif)"
                                         IsChecked="{Binding IsLengkapFormat}"
                                         Style="{StaticResource MaterialDesignRadioButton}"
                                         FontSize="13">
                                <RadioButton.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="Buat laporan lengkap dengan semua field transaksi yang tersedia" 
                                                   MaxWidth="250" 
                                                   TextWrapping="Wrap"/>
                                    </ToolTip>
                                </RadioButton.ToolTip>
                            </RadioButton>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Tombol Proses -->
                <Button Content="PROSES FILE EJ"
                        Command="{Binding ProcessCommand}"
                        Height="55"
                        FontSize="16"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"
                        Margin="0,10,0,15">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
                            <Setter Property="Background" Value="#755DE7"/>
                            <Setter Property="BorderBrush" Value="#755DE7"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6344D9"/>
                                    <Setter Property="BorderBrush" Value="#6344D9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Pratinjau Output -->
                <TextBlock Text="{Binding OutputPreview}"
                           FontSize="13"
                           Foreground="#DB4231"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Visibility="{Binding OutputPreview, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Overlay Progres -->
        <Grid Grid.Row="1" 
              Background="#CC000000" 
              Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             IsIndeterminate="True"
                             Width="80"
                             Height="80"
                             Foreground="#DB4231"/>
                <TextBlock Text="Memproses..." 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Bar Status -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="30,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0"
                                          Kind="Information"
                                          VerticalAlignment="Center"
                                          Foreground="#DB4231"
                                          Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="#757575"/>
            </Grid>
        </Border>
    </Grid>
</Page>
